{
  "name": "template-mcp-ts",
  "version": "1.0.0",
  "description": "A template implementation of a Model Context Protocol (MCP) server in TypeScript",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "tsx src/server.ts",
    "prod": "node dist/server.js",
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "inspect": "npx @modelcontextprotocol/inspector --transport http --server-url http://localhost:1338/mcp"
  },
  "dependencies": {
    "@blaxel/core": "^0.2.64",
    "@blaxel/telemetry": "^0.2.64",
    "@modelcontextprotocol/sdk": "^1.20.0",
    "express": "^4.21.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
